{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "target": "es5",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true ,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "/opt/nodejs/*": [
        "../layers/src/common/nodejs/*",
        "./layer/nodejs/*"
      ],
      "@/*": [
        "./*"
      ]
    }
  }
}